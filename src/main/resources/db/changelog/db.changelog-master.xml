<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Reference individual changelogs -->
<!--    <include file="db/changelog/001-initial-setup.xml" />-->
<!--    <include file="db/changelog/002-add-is_active-column.xml" />-->

    
    <changeSet id="1" author="admin">
        <!-- Enum types -->
        <sql>CREATE TYPE role_enum AS ENUM ('ADMIN', 'USER', 'EMPLOYEE');</sql>
        <sql>CREATE TYPE transaction_type_enum AS ENUM ('CLASSIC', 'INSTANT', 'RECURRING');</sql>
        <sql>CREATE TYPE transaction_status_enum AS ENUM ('APPROVED', 'REJECTED', 'PENDING');</sql>
        <sql>CREATE TYPE loan_status_enum AS ENUM ('PENDING', 'APPROVED', 'REJECTED');</sql>
        <sql>CREATE TYPE invoice_status_enum AS ENUM ('PAID', 'UNPAID', 'OVERDUE');</sql>
    </changeSet>

    <changeSet id="2" author="admin">
        <!-- Users table -->
        <createTable tableName="users">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_income" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="credit_score" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="role_enum">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="admin">
        <!-- Bank Accounts table -->
        <createTable tableName="bank_accounts">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_number" type="VARCHAR(20)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="balance" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>

        <!-- Foreign key constraint for owner_id with onDelete CASCADE -->
        <addForeignKeyConstraint baseTableName="bank_accounts"
                                 baseColumnNames="owner_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_bank_accounts_users"/>
    </changeSet>

    <changeSet id="4" author="admin">
        <!-- Transactions table -->
        <createTable tableName="transactions">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="transaction_type_enum">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="account_from_id" type="INTEGER"/>
            <column name="account_to_id" type="INTEGER"/>
            <column name="fee" type="DOUBLE PRECISION" defaultValueNumeric="0"/>
            <column name="status" type="transaction_status_enum">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key constraints for transactions table with onDelete CASCADE -->
        <addForeignKeyConstraint baseTableName="transactions"
                                 baseColumnNames="account_from_id"
                                 referencedTableName="bank_accounts"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_transactions_account_from"/>

        <addForeignKeyConstraint baseTableName="transactions"
                                 baseColumnNames="account_to_id"
                                 referencedTableName="bank_accounts"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_transactions_account_to"/>
    </changeSet>

    <changeSet id="5" author="admin">
        <!-- Loans table -->
        <createTable tableName="loans">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="amount" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="eligibility_criteria" type="TEXT"/>
            <column name="status" type="loan_status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key constraint for loans table with onDelete CASCADE -->
        <addForeignKeyConstraint baseTableName="loans"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_loans_users"/>
    </changeSet>

    <changeSet id="6" author="admin">
        <!-- Invoices table -->
        <createTable tableName="invoices">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="amount_due" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="due_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="invoice_status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key constraint for invoices table with onDelete CASCADE -->
        <addForeignKeyConstraint baseTableName="invoices"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_invoices_users"/>
    </changeSet>

</databaseChangeLog>